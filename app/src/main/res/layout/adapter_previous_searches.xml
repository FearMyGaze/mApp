<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapterCachedQueryRoot"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="12.5dp"
    app:contentPadding="10dp"
    app:cardBackgroundColor="@color/basicBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/adapterCachedQueryText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/textBold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/adapterCachedQueryImage"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/adapterCachedQueryImage"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_arrow_outward_24"
            android:scaleX="-1"
            app:layout_constraintStart_toEndOf="@id/adapterCachedQueryText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
