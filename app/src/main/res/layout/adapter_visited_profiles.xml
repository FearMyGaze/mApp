<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapterCachedSearchRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp"
    app:cardCornerRadius="12.5dp"
    app:cardBackgroundColor="@color/basicBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/adapterCachedSearchImage"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_launcher_background"
            app:shapeAppearance="@style/RectComponent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/adapterCachedSearchUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/textBold"
            android:textStyle="normal"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="12"
            android:minEms="5"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/adapterCachedSearchImage"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
