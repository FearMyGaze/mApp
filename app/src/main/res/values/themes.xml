<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mercury" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/variant</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/variant</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status & navigation bar color. -->
        <item name="android:statusBarColor" tools:targetApi="27">@color/basicBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="27">true</item>
        <item name="android:navigationBarColor" tools:targetApi="27">@color/basicBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <!-- Customize your theme here. -->
        <item name="colorError">#B00020</item>
        <item name="colorOnError">#B00020</item>
        <item name="chipStyle">@style/Chip.Style</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="RectComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <style name="RoundedComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ToolBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/Toolbar.ThemeOverlay</item>
    </style>

    <style name="Toolbar.ThemeOverlay" parent="">
        <item name="colorOnPrimary">?colorPrimary</item>
    </style>

    <style name="ToolBar.TextAppearance" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/bebas_neue</item>
        <item name="android:fontFamily">@font/bebas_neue</item>
    </style>

    <style name="Tab.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Chip.Style" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipIconSize">19dp</item>
        <item name="android:textSize">15sp</item>
        <item name="textStartPadding">4dp</item>
        <item name="textEndPadding">1dp</item>
        <item name="chipSpacing">1dp</item>
        <item name="chipStartPadding">1dp</item>
        <item name="chipEndPadding">1dp</item>
        <item name="chipCornerRadius">60dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipBackgroundColor">@color/basicBackground</item>
    </style>

</resources>
